@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
                <h3>@ViewBag.Role</h3>
            </hgroup>
            <p>
                To learn more about ASP.NET MVC visit
                <a href="http://asp.net/mvc" title="ASP.NET MVC Website">http://asp.net/mvc</a>.
                The page features <mark>videos, tutorials, and samples</mark> to help you get the most from ASP.NET MVC.
                If you have any questions about ASP.NET MVC visit
                <a href="http://forums.asp.net/1146.aspx/1?MVC" title="ASP.NET MVC Forum">our forums</a>.
            </p>
        </div>
    </section>
}
@{
    
    if (ViewBag.Authenticated)
    {

        string[] roles = Roles.GetRolesForUser(WebSecurity.CurrentUserName);
        if (roles.Contains("Admin"))
        {
            Html.RenderPartial("AdminPartialView");
        }
        if (roles.Contains("Operator"))
        {
            Html.RenderPartial("OperatorPartialView");
        }
        if (roles.Contains("Engineer"))
        {
            Html.RenderPartial("EngineerPartialView");
        }
        if (roles.Contains("User"))
        {
            Html.RenderPartial("UserPartialView");
        }
    }
}


