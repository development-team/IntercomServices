@model iLexStudio.IntercomServices.Models.Users.ViewAccountModel

<h1>Account roles</h1>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                Admin
                @Html.CheckBox("AdminChecked", Model.AdminChecked)
            </li>
            <li>
                Operator
                @Html.CheckBox("OperatorChecked", Model.OperatorChecked)
            </li>
            <li>
                Engineer
                @Html.CheckBox("EngineerChecked", Model.EngineerChecked)
            </li>
            <li>
                @Html.Hidden("UserName", Model.UserName)
            </li>
        </ol>
        <input type="submit" value="Save changes" />
    </fieldset>
}